<UserControl x:Class="CubeSatCommSim.View.MonitorExample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CubeSatCommSim.View"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <ScrollViewer 
        HorizontalAlignment="Stretch"
        VerticalScrollBarVisibility="Disabled"
        HorizontalScrollBarVisibility="Auto"
    >
        <Canvas VerticalAlignment="Stretch" Width="400" Height="100" Background="White">
            <Line X1="0" X2="400" Y1="50" Y2="50" Stroke="Black" StrokeThickness="2"/>
            <Line X1="0" X2="400" Y1="0" Y2="100" Stroke="Red" StrokeThickness="1"/>
        </Canvas>            
    </ScrollViewer>
</UserControl>
