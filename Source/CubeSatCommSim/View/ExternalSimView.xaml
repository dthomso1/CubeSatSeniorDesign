<UserControl x:Class="CubeSatCommSim.View.ExternalSimView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CubeSatCommSim.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <UserControl.Resources>
    <XmlDataProvider Source="C:\Users\David\Source\Repos\CubeSatSeniorDesign\Source\CubeSatCommSim\Data\ErrorInfo.xml"
                     x:Key="ErrorData" />
  </UserControl.Resources>
  <Grid>
    <DataGrid Name="ErrorGrid" AutoGenerateColumns="False"
              ItemsSource="{Binding Source={StaticResource ErrorData},XPath=//Error}">



      <DataGrid.Columns>
        <DataGridCheckBoxColumn
           Header=""/>
        <!-- Binding="{Binding ErrorsSelected}" -->

        <DataGridTextColumn Binding="{Binding XPath=id}"
                            Header="ID" />
        <DataGridTextColumn Binding="{Binding XPath=description}"
                            Header="Description" />
        <DataGridTextColumn Binding="{Binding XPath=isFatal}"
                            Header="isFatal" />
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
